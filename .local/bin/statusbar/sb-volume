#!/bin/sh
muted="‚åÄ"
# Prints the current volume or $muted if muted.

case $BLOCK_BUTTON in
	1) setsid -f "$TERMINAL" -e pulsemixer ;;
	2) pamixer -t ;;
	4) pamixer --allow-boost -i 1 ;;
	5) pamixer --allow-boost -d 1 ;;
	3) notify-send "üì¢ Volume module" "\- Shows volume%, $muted if muted.
- Middle click to mute.
- Scroll to change." ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

[ $(pamixer --get-mute) = true ] && echo $muted && exit

pamixer --list-sinks | grep alsa_output | cut -d ' ' -f1 | uniq | sort | while IFS= read -r sink; do
	vol="$(pamixer --sink "$sink" --get-volume)"

	if [ "$vol" -gt "90" ]; then
		icon="‚ñà"
	elif [ "$vol" -gt "80" ]; then
		icon="‚ñà"
	elif [ "$vol" -gt "70" ]; then
		icon="‚ñá"
	elif [ "$vol" -gt "60" ]; then
		icon="‚ñÜ"
	elif [ "$vol" -gt "50" ]; then
		icon="‚ñÖ"
	elif [ "$vol" -gt "40" ]; then
		icon="‚ñÑ"
	elif [ "$vol" -gt "30" ]; then
		icon="‚ñÉ"
	elif [ "$vol" -gt "20" ]; then
		icon="‚ñÇ"
	elif [ "$vol" -gt "10" ]; then
		icon="‚ñÅ"
	elif [ "$vol" -gt "0" ]; then
		icon="_"
	else
		icon=" "
		vol=""
	fi

	printf "%s %d%% " "$icon" "$vol"
done

printf "\n"
