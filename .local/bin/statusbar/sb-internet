#!/bin/sh

# Show wifi ðŸ“¶ and percent strength or ðŸ“¡ if none.
# Show ðŸŒ if connected to ethernet or âŽ if none.
# Show âš¼ if a vpn connection is active

vpn_icon="âš¼ "
ethernet_up_icon="ðŸŒ"
ethernet_down_icon="âŽ"
wifi_up_icon="ðŸ“¶"
wifi_down_icon="ðŸ“¡ "

case $BLOCK_BUTTON in
	# 1) "$TERMINAL" -e nmtui; pkill -RTMIN+4 dwmblocks ;;
	3) notify-send "ðŸŒ Internet module" "\- Click to connect
$wifi_down_icon: no wifi connection
$wifi_up_icon: wifi connection with quality
$ethernet_down_icon: no ethernet
$ethernet_up_icon: ethernet working
$vpn_icon: vpn is active
" ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

case "$(cat /sys/class/net/w*/operstate 2>/dev/null)" in
	down) wifi="$wifi_down_icon" ;;
	up) wifi="$(awk "/^\s*w/ { print $wifi_up_icon, int($3 * 100 / 70) '% ' }" /proc/net/wireless)" ;;
esac

printf "%s%s%s\n" "$wifi" "$(sed "s/.*/$vpn_icon/" /sys/class/net/tun*/operstate 2>/dev/null)" "$(sed "s/down/$ethernet_down_icon/;s/up/$ethernet_up_icon/" /sys/class/net/e*/operstate 2>/dev/null)"
