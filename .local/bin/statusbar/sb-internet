#!/bin/sh

# Show wifi âš¹ and percent strength or âŠ– if none.
# Show ðŸŒ if connected to ethernet or âˆ… if none.
# Show âš¼ if a vpn connection is active

vpn_icon="âš¼ "
ethernet_up_icon="ðŸŒ"
ethernet_down_icon="âˆ…"
wifi_up_icon="âš¹"
wifi_down_icon="âŠ–"

case $BLOCK_BUTTON in
	# 1) "$TERMINAL" -e nmtui; pkill -RTMIN+4 dwmblocks ;;
	3) cat /sys/class/net/w*/operstate 2>/dev/null && "$TERMINAL" -e sudo wifi-menu; pkill -RTMIN+4 dwmblocks ;;
esac

case "$(cat /sys/class/net/w*/operstate 2>/dev/null)" in
	down) wifi="$wifi_down_icon" ;;
	up)
		strength="$(awk "/^\s*w/ { print int($3 * 100 / 70) '% ' }" /proc/net/wireless)"

		if [ "$strength" -gt "90" ]; then
			icon="â–ˆ"
		elif [ "$strength" -gt "80" ]; then
			icon="â–ˆ"
		elif [ "$strength" -gt "70" ]; then
			icon="â–‡"
		elif [ "$strength" -gt "60" ]; then
			icon="â–†"
		elif [ "$strength" -gt "50" ]; then
			icon="â–…"
		elif [ "$strength" -gt "40" ]; then
			icon="â–„"
		elif [ "$strength" -gt "30" ]; then
			icon="â–ƒ"
		elif [ "$strength" -gt "20" ]; then
			icon="â–‚"
		elif [ "$strength" -gt "10" ]; then
			icon="â–"
		elif [ "$strength" -gt "0" ]; then
			icon="_"
		else
			icon=" "
			strength=""
		fi

		wifi="$wifi_up_icon $icon"
	;;
esac

printf "%s%s%s\n" "$wifi" "$(sed "s/.*/$vpn_icon/" /sys/class/net/tun*/operstate 2>/dev/null)" "$(sed "s/down/$ethernet_down_icon/;s/up/$ethernet_up_icon/" /sys/class/net/e*/operstate 2>/dev/null)"
