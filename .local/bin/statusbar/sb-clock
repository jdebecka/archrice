#!/bin/sh

sec=$(echo "$(date '+%S')%2" | bc)
min=$(date '+%M')

icon="‚óã"
[ "$sec" -eq "0" ] && icon="‚óè"


clock="‚ó•"
[ "$min" -gt "15" ] && clock="‚ó¢"
[ "$min" -gt "30" ] && clock="‚ó£"
[ "$min" -gt "45" ] && clock="‚ó§"

# clock="‚ó∑"
# [ "$clock" -gt "15" ] && clock="‚ó∂"
# [ "$clock" -gt "30" ] && clock="‚óµ"
# [ "$clock" -gt "45" ] && clock="‚ó¥"

case $BLOCK_BUTTON in
	1) notify-send "This Month" "$(cal --color=always | sed "s/..7m/<b><span color=\"red\">/;s/..27m/<\/span><\/b>/")" && notify-send "Appointments" "$(calcurse -d3)" ;;
	2) setsid -f "$TERMINAL" -e calcurse ;;
	3) notify-send "üìÖ Time/date module" "\- Left click to show upcoming appointments for the next three days via \`calcurse -d3\` and show the month via \`cal\`
- Middle click opens calcurse if installed" ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

date "+%Y %b %d (%a) $clock %I:%M $icon %p"
